<div class="header">
    <h1><%= __('profile.title') %></h1>
    <div class="header-actions">
        <button class="btn btn-secondary" id="refreshBtn">
            <span class="material-symbols-outlined" style="font-size: 16px;">refresh</span>
            <%= __('profile.refreshProfile') %>
        </button>
    </div>
</div>

<div class="profile-content">
    <!-- Profile Header Card -->
    <div class="profile-header-card">
        <div class="profile-avatar">
            <span class="material-symbols-outlined">account_circle</span>
        </div>
        <div class="profile-header-info">
            <h2 id="profileDisplayName"><%= __('profile.loading') %></h2>
            <p id="profileUsername"><%= __('profile.loading') %></p>
            <div class="profile-badges">
                <span class="profile-badge role" id="profileRoleBadge"><%= __('profile.loading') %></span>
                <div class="twofa-status" id="twofaHeaderStatus"></div>
            </div>
        </div>
        <div class="profile-header-meta">
            <div class="meta-item">
                <span class="meta-label"><%= __('profile.memberSince') %></span>
                <span class="meta-value" id="profileHeaderCreated"><%= __('profile.loading') %></span>
            </div>
        </div>
    </div>

    <!-- Profile Overview Card -->
    <div class="profile-card">
        <div class="card-header">
            <h3><%= __('profile.profileOverview') %></h3>
            <div class="card-actions">
                <a href="/user/account" class="btn btn-sm btn-primary">
                    <span class="material-symbols-outlined" style="font-size: 14px;">edit</span>
                    <%= __('profile.editDetails') %>
                </a>
            </div>
        </div>
        <div class="card-content">
            <div class="info-grid">
                <div class="info-item">
                    <label class="info-label"><%= __('profile.username') %></label>
                    <div class="info-value" id="profileUsername2"><%= __('profile.loading') %></div>
                </div>
                <div class="info-item">
                    <label class="info-label"><%= __('profile.fullName') %></label>
                    <div class="info-value" id="profileFullName"><%= __('profile.loading') %></div>
                </div>
                <div class="info-item">
                    <label class="info-label"><%= __('profile.emailAddress') %></label>
                    <div class="info-value" id="profileEmail"><%= __('profile.loading') %></div>
                </div>
                <div class="info-item">
                    <label class="info-label"><%= __('profile.role') %></label>
                    <div class="info-value" id="profileRole"><%= __('profile.loading') %></div>
                </div>
                <div class="info-item">
                    <label class="info-label"><%= __('profile.serviceAssignment') %></label>
                    <div class="info-value" id="profileService"><%= __('profile.loading') %></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Security Overview Card -->
    <div class="profile-card">
        <div class="card-header">
            <h3><%= __('profile.security.title') %></h3>
            <div class="card-actions">
                <a href="/user/privacy" class="btn btn-sm btn-primary">
                    <span class="material-symbols-outlined" style="font-size: 14px;">security</span>
                    <%= __('privacy.security.title') %>
                </a>
            </div>
        </div>
        <div class="card-content">
            <div class="info-grid">
                <div class="info-item">
                    <label class="info-label"><%= __('profile.twoFactorAuth') %></label>
                    <div class="info-value">
                        <span class="status-badge" id="totpStatus"><%= __('profile.loading') %></span>
                        <span class="status-badge" id="webauthnStatus" style="margin-left: 8px;"><%= __('profile.loading') %></span>
                    </div>
                    <small class="info-help"><%= __('profile.security.totpDescription') %></small>
                </div>
                <div class="info-item">
                    <label class="info-label"><%= __('profile.lastPasswordChange') %></label>
                    <div class="info-value" id="lastPasswordChange"><%= __('profile.loading') %></div>
                    <small class="info-help"><%= __('profile.lastPasswordHelp') %></small>
                </div>
            </div>
        </div>
    </div>

    <!-- Session Card -->
    <div class="profile-card">
        <div class="card-header">
            <h3><%= __('profile.session.title') %></h3>
            <div class="card-actions">
                <button class="btn btn-sm btn-secondary" id="refreshSessionBtn">
                    <span class="material-symbols-outlined" style="font-size: 14px;">refresh</span>
                </button>
            </div>
        </div>
        <div class="card-content">
            <div class="session-info">
                <div class="session-item">
                    <span class="session-icon material-symbols-outlined">schedule</span>
                    <div class="session-details">
                        <label><%= __('profile.session.sessionStarted') %></label>
                        <span id="sessionCreated"><%= __('profile.loading') %></span>
                    </div>
                </div>
                <div class="session-item">
                    <span class="session-icon material-symbols-outlined">update</span>
                    <div class="session-details">
                        <label><%= __('profile.session.lastActivity') %></label>
                        <span id="sessionLastActivity"><%= __('profile.loading') %></span>
                    </div>
                </div>
                <div class="session-item">
                    <span class="session-icon material-symbols-outlined">timer</span>
                    <div class="session-details">
                        <label><%= __('profile.session.sessionExpires') %></label>
                        <span id="sessionExpires"><%= __('profile.loading') %></span>
                    </div>
                </div>
                <div class="session-item">
                    <span class="session-icon material-symbols-outlined">location_on</span>
                    <div class="session-details">
                        <label><%= __('profile.session.ipAddress') %></label>
                        <span class="mono" id="sessionIpAddress"><%= __('profile.loading') %></span>
                    </div>
                </div>
                <div class="session-item full-width">
                    <span class="session-icon material-symbols-outlined">computer</span>
                    <div class="session-details">
                        <label><%= __('profile.browserDevice') %></label>
                        <span class="mono small" id="sessionUserAgent"><%= __('profile.loading') %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Integrations Overview Card -->
    <div class="profile-card">
        <div class="card-header">
            <h3><%= __('profile.integrations.title') %></h3>
            <div class="card-actions">
                <a href="/user/integrations" class="btn btn-sm btn-primary">
                    <span class="material-symbols-outlined" style="font-size: 14px;">settings</span>
                    <%= __('profile.integrations.manage') %>
                </a>
            </div>
        </div>
        <div class="card-content">
            <div class="info-grid">
                <div class="info-item">
                    <label class="info-label"><%= __('profile.integrations.calendarIntegration') %></label>
                    <div class="info-value">
                        <div class="ics-feed-status" id="icsFeedStatus">
                            <span class="material-symbols-outlined">sync</span>
                            <span class="status-text">Loading...</span>
                        </div>
                    </div>
                    <small class="info-help"><%= __('profile.integrations.calendarHelp') %></small>
                </div>
                <div class="info-item">
                    <label class="info-label"><%= __('profile.integrations.emailNotifications') %></label>
                    <div class="info-value" id="emailNotificationStatus"><%= __('profile.integrations.loadingStatus') %></div>
                    <small class="info-help"><%= __('profile.integrations.emailNotificationsHelp') %></small>
                </div>
            </div>
        </div>
    </div>

    <!-- Activity Card -->
    <div class="profile-card">
        <div class="card-header">
            <h3><%= __('profile.recentActivity.title') %></h3>
            <div class="card-actions">
                <button class="btn btn-sm btn-secondary" id="refreshActivityBtn">
                    <span class="material-symbols-outlined" style="font-size: 14px;">refresh</span>
                </button>
            </div>
        </div>
        <div class="card-content">
            <div class="activity-tabs">
                <button class="activity-tab active" data-tab="logins"><%= __('profile.recentActivity.recentLogins') %></button>
                <button class="activity-tab" data-tab="failed" id="failedTab" style="display: none;"><%= __('profile.recentActivity.failedAttempts') %></button>
                <button class="activity-tab" data-tab="password" id="passwordTab" style="display: none;"><%= __('profile.recentActivity.passwordChanges') %></button>
            </div>

            <div class="activity-content">
                <div class="activity-list active" id="recentLogins">
                    <div class="loading"><%= __('profile.recentActivity.loadingLogins') %></div>
                </div>
                <div class="activity-list" id="failedLogins" style="display: none;"></div>
                <div class="activity-list" id="passwordChanges" style="display: none;"></div>

                <button class="show-more-btn" id="showMoreBtn" style="display: none;">
                    <span class="material-symbols-outlined" style="font-size: 16px;">expand_more</span>
                    <%= __('profile.recentActivity.showMore') %>
                </button>
            </div>
        </div>
    </div>
</div>

<% if (editableProfile) { %>
    <!-- Edit Profile Modal -->
    <div class="modal-overlay" id="editProfileModal">
        <div class="modal">
            <div class="modal-header">
                <h2><%= __('profile.editModal.title') %></h2>
                <button class="modal-close" id="closeEditModalBtn">&times;</button>
            </div>
            <form id="editProfileForm">
                <div class="form-section">
                    <label class="form-label" for="editFullName"><%= __('profile.editModal.fullNameLabel') %></label>
                    <input type="text" class="form-control" id="editFullName" maxlength="255" placeholder="<%= __('profile.editModal.fullNamePlaceholder') %>">
                    <small class="form-help"><%= __('profile.editModal.fullNameHelp') %></small>
                </div>

                <div class="form-section">
                    <label class="form-label" for="editEmail"><%= __('profile.editModal.emailLabel') %></label>
                    <input type="email" class="form-control" id="editEmail" placeholder="<%= __('profile.editModal.emailPlaceholder') %>">
                    <small class="form-help"><%= __('profile.editModal.emailHelp') %></small>
                </div>

                <div class="form-divider"></div>

                <div class="form-section">
                    <h3><%= __('profile.editModal.twoFactorTitle') %></h3>
                    <div class="twofa-options">
                        <div class="twofa-option">
                            <div class="checkbox-group">
                                <input type="checkbox" id="editTotpEnabled" class="form-checkbox">
                                <label class="form-label" for="editTotpEnabled"><%= __('profile.editModal.totpEnabled') %></label>
                            </div>
                            <small class="form-help"><%= __('profile.editModal.totpHelp') %></small>
                        </div>

                        <div class="twofa-option">
                            <div class="checkbox-group">
                                <input type="checkbox" id="editWebauthnEnabled" class="form-checkbox">
                                <label class="form-label" for="editWebauthnEnabled"><%= __('profile.editModal.webauthnEnabled') %></label>
                            </div>
                            <small class="form-help"><%= __('profile.editModal.webauthnHelp') %></small>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancelEditBtn"><%= __('common.cancel') %></button>
                    <button type="submit" class="btn btn-primary" id="saveProfileBtn">
                        <span class="material-symbols-outlined" style="font-size: 16px;">save</span>
                        <%= __('profile.editModal.saveChanges') %>
                    </button>
                </div>
            </form>
        </div>
    </div>
<% } %>

<!-- Toast Notification -->
<div class="toast" id="toast">
    <div class="toast-content">
        <span class="toast-icon material-symbols-outlined"></span>
        <span class="toast-message"></span>
    </div>
</div>