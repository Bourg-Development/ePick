                <div class="notification-category">
                    <div class="category-header">
                        <h3><%= __('notifications.email.activity.title') %></h3>
                        <p><%= __('notifications.email.activity.subtitle') %></p>
                    </div>
                    <div class="notification-options">
                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.activity.analysisCompletion') %></h4>
                                <p><%= __('notifications.email.activity.analysisCompletionHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="analysisCompletionToggle" class="toggle-input">
                                    <label for="analysisCompletionToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.activity.dataExport') %></h4>
                                <p><%= __('notifications.email.activity.dataExportHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="dataExportToggle" class="toggle-input">
                                    <label for="dataExportToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.activity.reportGeneration') %></h4>
                                <p><%= __('notifications.email.activity.reportGenerationHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="reportGenerationToggle" class="toggle-input">
                                    <label for="reportGenerationToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
