# ============================================
# ePick Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ============================================

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
SUPPORT_URL=https://support.example.com

# --------------------------------------------
# Database Configuration (PostgreSQL)
# --------------------------------------------
DB_HOST=localhost
DB_PORT=5435
DB_NAME=epick_db
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=false

# --------------------------------------------
# Security Secrets (REQUIRED - Generate unique values!)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# --------------------------------------------
ACCESS_TOKEN_SECRET=generate_a_64_character_hex_string_here
REFRESH_TOKEN_SECRET=generate_another_64_character_hex_string
PEPPER=generate_a_32_character_hex_string
CRYPTO_SECRET=exactly_32_characters_required!!

# --------------------------------------------
# JWT Token Settings
# --------------------------------------------
ACCESS_TOKEN_EXPIRY=15m
ACCESS_TOKEN_COOKIE_EXPIRY=86400
REFRESH_TOKEN_EXPIRY=7d

# --------------------------------------------
# Email Configuration (SMTP)
# --------------------------------------------
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_SECURE=false
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=ePick System
REPLY_TO=support@example.com

# --------------------------------------------
# Password Policy
# --------------------------------------------
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SYMBOL=true

# --------------------------------------------
# Security Settings
# --------------------------------------------
CORS_ORIGIN=*
LOG_ENCRYPTION_ENABLED=false
REFERENCE_CODE_EXPIRY_DAYS=7
SESSION_DEVICE_BINDING=false

# --------------------------------------------
# WebAuthn Configuration (Passwordless Auth)
# --------------------------------------------
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=ePick
WEBAUTHN_RP_ICON=
WEBAUTHN_ORIGIN=http://localhost:3000

# --------------------------------------------
# GitHub Integration (Optional - for updates)
# --------------------------------------------
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=
GITHUB_SYNC_ENABLED=false
GITHUB_SYNC_INTERVAL=3600000
GITHUB_AUTO_PUBLISH=false

# --------------------------------------------
# SSL Configuration (Production only)
# --------------------------------------------
# SSL_KEY_PATH=./certs/private.key
# SSL_CERT_PATH=./certs/certificate.crt
# SSL_CA_PATH=./certs/ca_bundle.crt
