<aside class="sidebar" id="sidebar">
    <div class="sidebar-menu">
        <div class="sidebar-header">
            <h3><%= __('navigation.userArea') %></h3>
        </div>
        <ul>
            <li class="<%- path.includes('/profile') ? 'active' : null %>">
                <a href="/user/profile">
                    <span class="material-symbols-outlined">
                        person
                    </span>
                    <span><%= __('common.profile') %></span>
                </a>
            </li>

            <li class="settings-menu <%- path.includes('/account') || path.includes('/privacy') || path.includes('/integrations') ? 'active expanded' : null %>">
                <a href="#" class="settings-toggle">
                    <span class="material-symbols-outlined">
                        settings
                    </span>
                    <span><%= __('common.settings') %></span>
                    <span class="material-symbols-outlined expand-icon">
                        expand_more
                    </span>
                </a>
                <ul class="submenu">
                    <li class="<%- path.includes('/account') ? 'active' : null %>">
                        <a href="/user/account">
                            <span class="material-symbols-outlined">
                                manage_accounts
                            </span>
                            <span><%= __('navigation.accountSettings') %></span>
                        </a>
                    </li>
                    <li class="<%- path.includes('/privacy') ? 'active' : null %>">
                        <a href="/user/privacy">
                            <span class="material-symbols-outlined">
                                privacy_tip
                            </span>
                            <span><%= __('navigation.privacySecurity') %></span>
                        </a>
                    </li>
                    <li class="<%- path.includes('/integrations') ? 'active' : null %>">
                        <a href="/user/integrations">
                            <span class="material-symbols-outlined">
                                sync
                            </span>
                            <span>Integrations & Notifications</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li>
                <a href="https://portal.bourg.dev/help/category/ePick">
                    <span class="material-symbols-outlined">
                        help
                    </span>
                    <span><%= __('navigation.support') %></span>
                </a>
            </li>
        </ul>
    </div>
</aside>