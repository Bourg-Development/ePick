<div class="header">
    <h1><%= __('notifications.title') %></h1>
    <p><%= __('notifications.subtitle') %></p>
</div>

<div class="settings-container">
    <!-- Email Notifications -->
    <div class="settings-card">
        <div class="card-header">
            <h2>
                <span class="material-symbols-outlined">email</span>
                <%= __('notifications.email.title') %>
            </h2>
            <p><%= __('notifications.email.subtitle') %></p>
        </div>
        <div class="card-content">
            <div class="notification-availability" id="emailAvailabilityStatus">
                <!-- This will be populated by JavaScript -->
            </div>

            <div class="notification-categories" id="emailNotificationCategories" style="display: none;">
                <div class="notification-category">
                    <div class="category-header">
                        <h3><%= __('notifications.email.security.title') %></h3>
                        <p><%= __('notifications.email.security.subtitle') %></p>
                    </div>
                    <div class="notification-options">
                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.security.loginAlerts') %></h4>
                                <p><%= __('notifications.email.security.loginAlertsHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="loginAlertsToggle" class="toggle-input">
                                    <label for="loginAlertsToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.security.passwordChanges') %></h4>
                                <p><%= __('notifications.email.security.passwordChangesHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="passwordChangesToggle" class="toggle-input">
                                    <label for="passwordChangesToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.security.twoFactorChanges') %></h4>
                                <p><%= __('notifications.email.security.twoFactorChangesHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="twoFactorChangesToggle" class="toggle-input">
                                    <label for="twoFactorChangesToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.security.suspiciousActivity') %></h4>
                                <p><%= __('notifications.email.security.suspiciousActivityHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="suspiciousActivityToggle" class="toggle-input">
                                    <label for="suspiciousActivityToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="notification-category">
                    <div class="category-header">
                        <h3><%= __('notifications.email.system.title') %></h3>
                        <p><%= __('notifications.email.system.subtitle') %></p>
                    </div>
                    <div class="notification-options">
                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.system.maintenance') %></h4>
                                <p><%= __('notifications.email.system.maintenanceHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="maintenanceToggle" class="toggle-input">
                                    <label for="maintenanceToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.system.featureUpdates') %></h4>
                                <p><%= __('notifications.email.system.featureUpdatesHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="featureUpdatesToggle" class="toggle-input">
                                    <label for="featureUpdatesToggle" class="toggle-label">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="notification-option">
                            <div class="option-info">
                                <h4><%= __('notifications.email.system.systemAlerts') %></h4>
                                <p><%= __('notifications.email.system.systemAlertsHelp') %></p>
                            </div>
                            <div class="option-control">
                                <div class="toggle-switch">
                                    <input type="checkbox" id="systemAlertsToggle" class="toggle-input">
